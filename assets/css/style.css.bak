/* --- CSS VARIABLES & RESET --- */
:root {
  /* Colors */
  --c-bg: #050505;
  --c-surface: rgba(255, 255, 255, 0.03);
  --c-surface-hover: rgba(255, 255, 255, 0.07);
  --c-accent: #E53935;
  --c-accent-dark: #B71C1C;
  --c-accent-glow: rgba(229, 57, 53, 0.5);
  --c-text-main: #FFFFFF;
  --c-text-muted: #9CA3AF;
  --c-border: rgba(255, 255, 255, 0.08);

  /* Fonts */
  --font-main: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;

  /* Animation */
  --ease-elastic: cubic-bezier(0.175, 0.885, 0.32, 1.275);
  --ease-smooth: cubic-bezier(0.16, 1, 0.3, 1);
  --nav-height: 80px;
}

/* Light Mode Overrides */
[data-theme="light"] {
  --c-bg: #FFFFFF;
  --c-surface: rgba(0, 0, 0, 0.02);
  --c-surface-hover: rgba(0, 0, 0, 0.05);
  --c-text-main: #000000;
  --c-text-muted: #4B5563;
  --c-border: rgba(0, 0, 0, 0.1);
  --c-accent-glow: rgba(229, 57, 53, 0.2);
}

*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  scroll-behavior: smooth;
  font-size: 16px;
}

body {
  background-color: var(--c-bg);
  color: var(--c-text-main);
  font-family: var(--font-main);
  line-height: 1.6;
  overflow-x: hidden;
  -webkit-font-smoothing: antialiased;
  transition: background-color 0.3s ease, color 0.3s ease;
}

a {
  text-decoration: none;
  color: inherit;
  transition: 0.3s;
}

ul {
  list-style: none;
}

/* --- BACKGROUND FX --- */
.noise-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.05'/%3E%3C/svg%3E");
  pointer-events: none;
  z-index: 90;
  opacity: 0.4;
}

.ambient-light {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 0;
  pointer-events: none;
  background: radial-gradient(circle at 50% -20%, #1a0505 0%, transparent 60%);
  transition: opacity 0.5s;
}

[data-theme="light"] .ambient-light {
  opacity: 0.5;
}

.perspective-grid {
  position: absolute;
  width: 200%;
  height: 100vh;
  top: 0;
  left: -50%;
  background-image:
    linear-gradient(rgba(229, 57, 53, 0.1) 1px, transparent 1px),
    linear-gradient(90deg, rgba(229, 57, 53, 0.1) 1px, transparent 1px);
  background-size: 100px 100px;
  transform: perspective(500px) rotateX(60deg);
  transform-origin: top center;
  opacity: 0.15;
  animation: gridMove 20s linear infinite;
  mask-image: linear-gradient(to bottom, transparent 0%, black 40%, transparent 90%);
  pointer-events: none;
  z-index: -1;
}

@keyframes gridMove {
  0% {
    transform: perspective(500px) rotateX(60deg) translateY(0);
  }

  100% {
    transform: perspective(500px) rotateX(60deg) translateY(100px);
  }
}

/* --- TYPOGRAPHY --- */
h1,
h2,
h3,
h4 {
  font-weight: 700;
  letter-spacing: -0.03em;
  color: var(--c-text-main);
}

h1 {
  font-size: clamp(3rem, 8vw, 6rem);
  line-height: 1;
  margin-bottom: 1.5rem;
}

h2 {
  font-size: clamp(2rem, 5vw, 3.5rem);
  margin-bottom: 2rem;
  position: relative;
  display: inline-block;
}

h3 {
  font-size: 1.5rem;
  margin-bottom: 0.5rem;
}

p {
  color: var(--c-text-muted);
  font-size: 1.15rem;
  margin-bottom: 1rem;
}

.text-accent {
  color: var(--c-accent);
}

/* --- LAYOUT UTILS --- */
.container {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 2rem;
  position: relative;
  z-index: 10;
}

.section-padding {
  padding: 8rem 0;
}

/* --- NAVIGATION --- */
.navbar {
  position: fixed;
  top: 20px;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  max-width: 1200px;
  padding: 0.8rem 2rem;
  z-index: 100;
  background: rgba(10, 10, 10, 0.7);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.08);
  border-radius: 100px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

[data-theme="light"] .navbar {
  background: rgba(255, 255, 255, 0.8);
  border-color: rgba(0, 0, 0, 0.05);
}

.navbar.scrolled {
  top: 10px;
  padding: 0.6rem 2rem;
  border-bottom-color: var(--c-accent);
}

.logo-container img {
  height: 28px;
  display: block;
}

.nav-links {
  display: flex;
  gap: 2rem;
}

.nav-links a {
  font-size: 0.95rem;
  font-weight: 500;
  color: var(--c-text-muted);
  position: relative;
}

.nav-links a:hover {
  color: var(--c-text-main);
}

.nav-actions {
  display: flex;
  align-items: center;
  gap: 1rem;
}

/* Theme Toggle */
.theme-toggle {
  width: 52px;
  height: 28px;
  background: #808080;
  border-radius: 50px;
  border: none;
  position: relative;
  cursor: pointer;
  padding: 2px;
}

.toggle-knob {
  display: block;
  width: 24px;
  height: 24px;
  background: #FFFFFF;
  border-radius: 50%;
  transform: translateX(0);
  transition: transform 0.3s var(--ease-elastic);
}

[data-theme="dark"] .toggle-knob {
  transform: translateX(24px);
}

/* --- BUTTONS --- */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.8rem 1.8rem;
  border-radius: 50px;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s var(--ease-smooth);
  cursor: pointer;
  font-size: 1rem;
}

.btn-primary {
  background: var(--c-accent);
  color: #fff;
  box-shadow: 0 4px 20px rgba(229, 57, 53, 0.3);
}

.btn-primary:hover {
  transform: translateY(-2px);
  background: var(--c-accent-dark);
  box-shadow: 0 10px 30px rgba(229, 57, 53, 0.5);
}

.btn-secondary {
  background: transparent;
  color: var(--c-text-main);
  border: 1px solid var(--c-accent);
}

.btn-secondary:hover {
  background: rgba(229, 57, 53, 0.1);
}

/* --- HERO --- */
.hero-section {
  min-height: 100vh;
  display: flex;
  align-items: center;
  padding-top: 100px;
  position: relative;
  overflow: hidden;
}

.hero-grid {
  display: grid;
  grid-template-columns: 1.1fr 0.9fr;
  gap: 4rem;
  align-items: center;
}

.hero-image img {
  width: 100%;
  max-width: 600px;
  height: auto;
  transform: rotate(-5deg);
  filter: drop-shadow(0 30px 60px rgba(0, 0, 0, 0.4));
  transition: transform 0.5s ease;
}

.hero-image:hover img {
  transform: rotate(0deg) scale(1.02);
}

/* --- GLASS CARDS --- */
.glass-card {
  background: var(--c-surface);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid var(--c-border);
  border-radius: 20px;
  padding: 2.5rem;
  transition: all 0.4s var(--ease-smooth);
}

.glass-card:hover {
  transform: translateY(-5px);
  border-color: rgba(229, 57, 53, 0.3);
  box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.3);
}

/* --- FEATURES & USE CASES --- */
.features-grid,
.use-case-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
}

.process-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 1.5rem;
}

.process-step {
  position: relative;
  overflow: hidden;
}

.step-number {
  font-size: 3.5rem;
  font-weight: 900;
  color: var(--c-accent);
  opacity: 0.15;
  line-height: 1;
  position: absolute;
  top: 1rem;
  right: 1.5rem;
}

.card-image-placeholder {
  height: 220px;
  border-radius: 12px;
  background-color: #222;
  background-size: cover;
  background-position: center;
  margin-bottom: 1.5rem;
  border: 1px solid var(--c-border);
}

/* --- FAQ ACCORDION --- */
.accordion {
  max-width: 800px;
  margin: 0 auto;
}

.accordion-item {
  border-bottom: 1px solid var(--c-border);
  margin-bottom: 1rem;
}

.accordion-header {
  width: 100%;
  text-align: left;
  background: none;
  border: none;
  padding: 1.5rem 0;
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--c-text-main);
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.accordion-header:hover {
  color: var(--c-accent);
}

.accordion-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
  color: var(--c-text-muted);
}

.accordion-header[aria-expanded="true"]+.accordion-content {
  padding-bottom: 1.5rem;
}

.chevron {
  width: 10px;
  height: 10px;
  border-right: 2px solid currentColor;
  border-bottom: 2px solid currentColor;
  transform: rotate(45deg);
  transition: transform 0.3s;
}

.accordion-header[aria-expanded="true"] .chevron {
  transform: rotate(225deg);
}

/* --- ANIMATIONS --- */
.reveal-group>* {
  opacity: 0;
  transform: translateY(30px);
  transition: all 0.6s var(--ease-smooth);
}

.reveal-group.active>* {
  opacity: 1;
  transform: translateY(0);
}

.reveal-group.active>*:nth-child(2) {
  transition-delay: 0.1s;
}

.reveal-group.active>*:nth-child(3) {
  transition-delay: 0.2s;
}

.reveal-group.active>*:nth-child(4) {
  transition-delay: 0.3s;
}

/* --- RESPONSIVE --- */
@media (max-width: 1024px) {
  .hero-grid {
    grid-template-columns: 1fr;
    text-align: center;
  }

  .features-grid,
  .use-case-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .process-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .hero-image img {
    max-width: 400px;
    margin-top: 3rem;
  }

  .nav-links {
    display: none;
  }
}

@media (max-width: 600px) {

  .features-grid,
  .use-case-grid,
  .process-grid {
    grid-template-columns: 1fr;
  }

  h1 {
    font-size: 3rem;
  }

  .navbar {
    width: 95%;
    padding: 0.8rem 1rem;
  }
}